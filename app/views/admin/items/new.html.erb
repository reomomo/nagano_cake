<!--タイトル-->
<div class="container">
  <div class="row">
    <div class="col-md-4.offset-md-8">
      <h3 class="bg-light">商品新規登録</h3>
    </div>
  </div>
</div>

<!--新規登録-->
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <%= form_with model: @item, url: admin_items_path do |f| %>
          <%= f.label :"商品画像" %>
          <%= f.file_field :image, accept: "image/*" %><br />
          <%= f.label :"商品名" %>
          <%= f.text_field :name, placeholder: "商品名" %><br />
          <%= f.label :"商品説明" %>
          <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %><br />
          <%= f.label :"ジャンル" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "選択してください" %><br />
          <%= f.label :"税抜価格" %>円
          <%= f.text_field :price, placeholder: "1000" %><br />
          <%= f.label :"販売ステータス" %>
          <%= f.radio_button :is_active, :on_sale, checked: true %>
          <%= f.label :is_active, "販売中", {value: :on_sale, style: "display: inline-block;"} %>
          <%= f.radio_button :is_active, :stopping_sales%>
          <%= f.label :is_active, "販売停止中", {value: :stopping_sales, style: "display: inline-block;"} %><br />

          <%= f.submit "新規登録", class: "btn btn-success" %>

      <% end %>
    </div>
  </div>
</div>

