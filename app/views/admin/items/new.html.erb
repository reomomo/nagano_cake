<!--タイトル-->
<div class="container" style="min-height: 500px;">
  <div class="row my-4">
    <div class="col-2">
      <h5 class="bg-gray text-center">商品新規登録</h5>
    </div>
  </div>

<!--新規登録-->
  <%= form_with model: @item, url: admin_items_path do |f| %>
    <div class="row my-1 justify-content-center">
      <div class="col-2 offset-1">
        <%= f.label :"商品画像" %>
      </div>
      <div class="col-7">
        <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>
    <div class="row my-1 justify-content-center">
      <div class="col-2 offset-1">
        <%= f.label :"商品名" %>
      </div>
      <div class="col-7">
        <%= f.text_field :name, placeholder: "商品名" %>
      </div>
    </div>
    <div class="row my-1 justify-content-center">
      <div class="col-2 offset-1">
        <%= f.label :"商品説明" %>
      </div>
      <div class="col-7">
        <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %>
      </div>
    </div>
    <div class="row my-1 justify-content-center">
      <div class="col-2 offset-1">
        <%= f.label :"ジャンル" %>
      </div>
      <div class="col-7">
        <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "選択してください" %>
      </div>
    </div>
    <div class="row my-1 justify-content-center">
      <div class="col-2 offset-1">
        <%= f.label :"税抜価格" %>
      </div>
      <div class="col-7">
        <%= f.text_field :price, placeholder: "1000" %>円
      </div>
    </div>
    <div class="row my-1 justify-content-center">
      <div class="col-2 offset-1">
        <%= f.label :"販売ステータス" %>
      </div>
      <div class="col-7">
        <%= f.radio_button :is_active, true, checked: true %>
        <%= f.label :is_active, "販売中", {value: :on_sale, style: "display: inline-block;"} %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "販売停止中", {value: :stopping_sales, style: "display: inline-block;"} %>
      </div>
    </div>
    <div class="row my-1 justify-content-center">
      <div class="col-2">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>

