<!--タイトル-->
<div class="container">
  <div class="row">
    <div class="col-md-4.offset-md-8">
      <h3 class="bg-light">商品新規登録</h3>
    </div>
  </div>
</div>

<!--新規登録-->
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <%= form_with model: @item, url: admin_items_path do |f| %>
          <%= f.label :"商品名" %><br />
          <%= f.text_field :name, placeholder: "商品名" %>
          <%= f.label :"商品名" %><br />
          <%= f.text_field :name, placeholder: "商品名" %>
          <%= f.label :"商品説明" %><br />
          <%= f.text_field :introduction, placeholder: "ここに説明文を記述します" %>
          <%= f.label :"ジャンル" %><br />
          <%= f.text_field :is_active, placeholder: "" %>
          <%= f.label :"税抜価格" %>円<br />
          <%= f.text_field :price, placeholder: "1000" %>
        </div>
            <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

