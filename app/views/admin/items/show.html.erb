<!--タイトル-->
<div class="container">
  <div class="row">
    <div class="col-md-4.offset-md-8">
      <h3 class="bg-light">商品詳細</h3>
      <%= image_tag @item.get_image(100,100) %>
      <table>
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
        　<th>商品説明</th>
        　<td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
        　<td><%= @item.genre.name %></td>
      　</tr>
      　<tr>
        　<th>税込価格<br>(税抜価格)</th>
        　<td><%= @item.add_tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>) 円</td>
      　</tr>
      　<tr>
        　<th>販売ステータス</th>
        　<td><% if @item.is_active == true %>
            販売中
          <% else %>
            販売停止中
          <% end %></td>
        </tr>
      </table>
    　<%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
    </div>
  </div>
</div>
