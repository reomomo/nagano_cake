<!--タイトル-->
<div class="container" style="min-height: 500px;">
  <div class="row my-4">
    <div class="col-2 offset-1">
      <h5 class="bg-gray text-center">商品詳細</h5>
    </div>
  </div>

<!--商品画像-->
  <div class="row">
    <div class="col-4">
      <%= image_tag @item.get_image(250,250) %>
    </div>

<!--商品詳細-->
    <div class="col-8">
      <div class="row mb-2">
        <div class="col-3">
          <strong class="font-large" >商品名</strong>
        </div>
        <div class="col-9">
          <%= @item.name %>
        </div>
      </div>
      <div class="row mb-2">
        <div class="col-3">
          <strong>商品説明</strong>
        </div>
        <div class="col-9">
          <%= @item.introduction %>
        </div>
      </div>
      <div class="row mb-2">
        <div class="col-3">
          ジャンル
        </div>
        <div class="col-9">
          <%= @item.genre.name %>
        </div>
      </div>
      <div class="row mb-4">
        <div class="col-3">
          <strong>税込価格<br>(税抜価格)</strong>
        </div>
        <div class="col-9 align-self-end">
          <strong><%= @item.with_tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>)</strong> 円
        </div>
      </div>
      <div class="row mb-5">
        <div class="col-3">
          <strong>販売ステータス</strong>
        </div>
        <div class="col-9">
          <% if @item.is_active == true %>
            <strong class="h5 font-weight-bold text-success">販売中</strong>
          <% else %>
            <strong class="h5 font-weight-bold text-success">販売停止中</strong>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-2 offset-2">
          <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success btn-block w-100 rounded-[3px]" %>
        </div>
      </div>
    </div>
  </div>
</div>
