<!--タイトル-->
<div class="container">
  <div class="row">
    <div class="col-md-2">
      <h5 class="bg-light">商品詳細</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @item.get_image(200,200) %>
    </div>
    <div class="col-md-8">
      <div class="row mb-2">
        <div class="col-md-3">
          <strong class="font-large" >商品名</strong>
        </div>
        <div class="col-md-9">
          <%= @item.name %>
        </div>
      </div>
      <div class="row mb-2">
        <div class="col-md-3">
          <strong>商品説明</strong>
        </div>
        <div class="col-md-9">
          <%= @item.introduction %>
        </div>
      </div>
      <div class="row mb-2">
        <div class="col-md-3">
          ジャンル
        </div>
        <div class="col-md-9">
          <%= @item.genre.name %>
        </div>
      </div>
      <div class="row mb-2">
        <div class="col-md-3">
          <strong>税込価格<br>(税抜価格)</strong>
        </div>
        <div class="col-md-9">
          <strong><%= @item.with_tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>)</strong> 円
        </div>
      </div>
      <div class="row mb-4">
        <div class="col-md-3">
          <strong>販売ステータス</strong>
        </div>
        <div class="col-md-9">
          <% if @item.is_active == true %>
            <strong class="h5 font-weight-bold text-success">販売中</strong>
          <% else %>
            <strong class="h5 font-weight-bold text-success">販売停止中</strong>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3 offset-md-2">
          <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success font-weight-bold btn-block" %>
        </div>
      </div>
    </div>
  </div>
</div>
