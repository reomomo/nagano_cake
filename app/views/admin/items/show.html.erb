<!--タイトル-->
<div class="container">
  <div class="row">
    <div class="col-md-4.offset-md-8">
      <h3 class="bg-light">商品詳細</h3>
    </div>
  </div>
</div>

<!--詳細-->
  <%= image_tag @item.get_image %>
　<p>商品名</p>
　<%= @item.name %>
　<p>商品説明</p>
　<%= @item.introduction %>
　<p>ジャンル</p>
　<%= @item.genre_id %>
　<p>税込価格<br>(税抜価格)</p>
　<%= @item.price.to_i*1.1(@item.price) %>円
　<p>販売ステータス</p>
　<%= @item.is_active %>

　<%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>

