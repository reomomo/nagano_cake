<!--タイトル-->
<div class="container">
  <div class="row">
    <div class="col-4.offset-8">
      <h3 class="bg-light">商品一覧</h3>
    </div>
    <%= link_to new_admin_item_path, class: "shadow p-3 mb-5 bg-white rounded" do %>
      <i class="fas fa-plus-circle"></i>
    <% end %>
  </div>

<!--一覧-->
  <div class="row">
    <div class="col-11">
      <table class="table">
        <tr class="bg-light">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
            <% end %>
          <td><%= item.price.to_s(:delimited) %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active ? "販売中" : "販売停止中" %></td>
        </tr>
        <% end %>
        <%= paginate @items %>
      </table>
    </div>
  </div>
</div>
