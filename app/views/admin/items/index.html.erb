<!--タイトル-->
<div class="container" style="min-height: 500px;">
  <div class="row my-4">
    <div class="col-2 mx-4">
      <h5 class="bg-gray text-center">商品一覧</h5>
    </div>
    <div class="col-1 offset-8">
      <%= link_to new_admin_item_path, class: "rounded-circle shadow p-3 mb-5 bg-white rounded" do %>
        <span class="text-dark"><i class="fas fa-plus-circle"></i></span>
      <% end %>
    </div>
  </div>

<!--一覧-->
  <div class="row justify-content-center">
    <div class="col-12">
      <table class="table border-bottom">
        <tr class="bg-light">
          <th class="col-1">商品ID</th>
          <th class="col-4">商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id) do %>
              <span class="text-dark"><%= item.name %></span>
            <% end %>
          <td><%= item.price.to_s(:delimited) %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active ? "販売中" : "販売停止中" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-2 mb-1 text-center">
      <%= paginate @items %>
    </div>
  </div>
</div>
