<!--タイトル-->
<div class="container">
  <div class="row">
    <div class="col-md-4.offset-md-8">
      <h3 class="bg-light">ジャンル一覧・追加</h3>
    </div>
  </div>
</div>

<!--編集-->
<%= form_with model: @customer, url: admin_customer_path do |f| %>
<div class="field">
    <%= f.label :姓 %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label :名 %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :セイ %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :メイ %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_area :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"会員ステータス" %>
    <%= f.radio_button :is_deleted, false, :checked => @customer.is_deleted == false %>
    <%= f.label :is_deleted, "有効", {value: :valid, style: "display: inline-block;"} %>
    <%= f.radio_button :is_deleted, true, :checked => @customer.is_deleted == true %>
    <%= f.label :is_deleted, "退会", {value: :unsubscribe, style: "display: inline-block;"} %><br />
  </div>

  <div class="actions">
    <%= f.submit "変更を保存", class: "btn btn-success" %>
  </div>
<% end %>
