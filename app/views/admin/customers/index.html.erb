<!--タイトル-->
<div class="container" style="min-height: 500px;">
  <div class="row mt-5 mb-2">
    <div class="col-2">
      <h5 class="bg-gray text-center">会員一覧</h5>
    </div>
  </div>

<!--一覧-->
  <div class="row">
    <div class="col-9 offset-1">
      <table class="table border-bottom">
        <tr class="bg-gray">
          <th>会員ID</th>
          <th class="col-4">氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to admin_customer_path(customer.id) do %>
              <span class="text-dark"><%= customer.last_name %><%= customer.first_name %></span>
            <% end %>
          </td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_deleted == false %>
              <strong class="h5 font-weight-bold text-success">有効</strong>
            <% else %>
              <strong class="h5 font-weight-bold text-secondary">退会</strong>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-3 text-center">
      <%= paginate @customers %>
    </div>
  </div>
</div>
