<!--タイトル-->
<div class="container" style="min-height: 500px;">
  <div class="row mt-4 mb-2">
    <div class="col-3">
      <h3 class="bg-gray text-center">注文履歴一覧</h3>
    </div>
  </div>

<!--注文履歴一覧-->
  <div class="row border-bottom w-100">
    <div class="col-10">
      <table class="table border-bottom">
        <tr class="bg-gray">
          <th class="col-3">購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to admin_order_path(order.id) do %>
              <span class="text-dark"><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S')  %></span>
            <% end %>
          </td>
          <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
          <td><%= order.order_details.sum(:amount) %></td>

          <td>
            <%= order.status_i18n %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
    <div class="row justify-content-center">
    <div class="col-2 mb-3 text-center">
      <%= paginate @orders %>
    </div>
  </div>
</div>

