<!--タイトル-->
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h3 class="bg-gray px-1 text-center">会員一覧</h3>
    </div>
  </div>

<!--注文履歴一覧-->
  <div class="row">
    <div class="col">
      <table class="table">
        <tr class="bg-light">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        <% @orders.each do |order| %>
        <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order.created_at %></td>
          <td>
            <%= link_to admin_order_path(order.id) do %>
              <%= order.customer.name %>
            <% end %>
          </td>
          <td><%= order_detail.amount %></td>
          <td>
            <% if order.status == false %>
              <strong class="h5 font-weight-bold text-success">有効</strong>
            <% else %>
              <strong class="h5 font-weight-bold text-secondary">退会</strong>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

