<!--タイトル-->
<div class="container">
  <div class="row mb-2">
    <div class="col-md-3">
      <h3 class="bg-gray px-1 text-center">注文履歴一覧</h3>
    </div>
  </div>

<!--注文履歴一覧-->
  <div class="row mb-2">
    <div class="col">
      <table class="table">
        <tr class="bg-light">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to admin_order_path(order.id) do %>
              <%= order.created_at %>
            <% end %>
          </td>
          <td><%= order.customer.name %></td>
          <td>
            <% @order_details.each do |order_detail| %>
              <%= order_detail.amount %></td>
            <% end %>
          <td>
            <%= select :status, order.statuses.keys.to_a %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

