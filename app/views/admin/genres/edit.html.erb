<!--タイトル-->
<div class="container">
  <div class="row">
    <div class="col-md-4.offset-md-8">
      <h3 class="bg-light">ジャンル編集</h3>
    </div>
  </div>
</div>

<!--編集-->
<%= form_with model: @genre do |f| %>

  <div class="field">
    <%= f.label :"ジャンル名" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存", class: "btn btn-success" %>
  </div>
<% end %>