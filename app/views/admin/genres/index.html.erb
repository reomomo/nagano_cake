<!--タイトル-->
<div class="container">
  <div class="row">
    <div class="col-md-4.offset-md-8">
      <h3 class="bg-light">ジャンル一覧・追加</h3>
    </div>
  </div>
</div>

<!--新規登録-->
<%= form_with model: @genre, url: admin_genres_path do |f| %>

  <div class="field">
    <%= f.label :"ジャンル名" %><br />
    <%= f.text_field :name, placeholder: "ジャンル名" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>

<!--一覧-->
<table>
  <tr>
    <th>ジャンル</th>
    <th></th>
  </tr>
  <% @genres.each do |genre| %>
  <tr>
    <td><%= genre.name %></td>
    <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
  </tr>
  <% end %>
</table>