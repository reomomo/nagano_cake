<!--タイトル-->
<div class="container" style="min-height: 500px;">
  <div class="row my-5">
    <div class="col-4">
      <h3 class="bg-gray">ジャンル一覧・追加</h3>
    </div>
  </div>

<!--新規登録-->
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <div class="row my-3">
      <div class="col-2">
        <%= f.label :"ジャンル名" %><br />
      </div>
      <div class="col-3">
        <%= f.text_field :name, placeholder: "ジャンル名" %>
      </div>
      <div class="col-2">
        <%= f.submit "新規登録", class: "btn btn-success rounded" %>
      </div>
    </div>
  <% end %>

<!--一覧-->
  <div class="row mt-3">
    <div class="col-4">
      <table class="table border-bottom">
        <tr class="bg-gray">
          <th class="text-center">ジャンル</th>
          <th></th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td class="text-right"><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success rounded" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>