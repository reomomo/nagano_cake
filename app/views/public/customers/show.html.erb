<!--タイトル-->
<div class="container">
  <div class="row mb-4">
    <div class="col-md-3 offset-1">
      <h5 class="bg-gray px-1 text-center">マイページ</h5>
    </div>
  </div>

<!--登録情報-->
  <div class="row mb-3 justify-content-start d-flex flex-row">
    <div class="col d-flex">

      <h5 class="mr-4"><strong>登録情報</strong></h5>


      <%= link_to "編集する", customers_information_edit_path, class: "btn btn-success font-weight-bold " %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col">
      <table class="col-8 table table-bordered">
        <tr>
          <th class="col-3 table-secondary border border-dark">氏名</th>
          <td class="border border-dark"><%= @customer.last_name %>  <%= @customer.first_name %></td>
        </tr>
        <tr>
          <th class="table-secondary border border-dark">カナ</th>
          <td class="border border-dark"><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-secondary border border-dark">郵便番号</th>
          <td class="border border-dark"><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="table-secondary border border-dark">住所</th>
          <td class="border border-dark"><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="table-secondary border border-dark">電話番号</th>
          <td class="border border-dark"><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="table-secondary border border-dark">メールアドレス</th>
          <td class="border border-dark"><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mb-3 mr-2 justify-content-start d-flex flex-row">
    <div class="col-2 d-flex">
      <strong class="mr-4">配送先</strong>
    </div>
    <div class="col-2 d-flex">
      <%= link_to "一覧を見る", customers_information_edit_path, class: "btn btn-primary font-weight-bold btn-block" %>
    </div>
  </div>
  <div class="row justify-content-start d-flex flex-row">
    <div class="col d-flex">
      <strong class="mr-4">注文履歴</strong>

      <%= link_to "一覧を見る", customers_information_edit_path, class: "btn btn-primary w-15 font-weight-bold" %>
    </div>
  </div>
</div>