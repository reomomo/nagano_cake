<!--タイトル-->
<div class="container">
  <div class="row mb-2">
    <div class="col-md-3">
      <h5 class="bg-gray px-1 text-center">マイページ</h5>
    </div>
  </div>

<!--注文内容-->
  <div class="row">
    <div class="col-md-9 align-self-start">
      <h5 class="bg-gray px-1 text-center"><strong>登録情報</strong></h5>
      <div class="btn btn-success font-weight-bold d-inline-flex"><%= link_to "編集する", customers_information_edit_path %></div>
      <table class="table">
        <tr>
          <th class="table-secondary">氏名</th>
          <td><%= @customer.last_name %>  <%= first_name %></td>
        </tr>
        <tr>
          <th class="table-secondary">カナ</th>
          <td><%= current_user.last_name_kana %>  <%= first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-secondary">郵便番号</th>
          <td><%= current_user.postal_code %></td>
        </tr>
        <tr>
          <th class="table-secondary">住所</th>
          <td><%= current_user.address %></td>
        </tr>
        <tr>
          <th class="table-secondary">電話番号</th>
          <td><%= current_user.telephone_number %></td>
        </tr>
        <tr>
          <th class="table-secondary">メールアドレス</th>
          <td><%= current_user.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <strong>配送先</strong>
    </div>
    <div class="col-md-2">
      <%= link_to "一覧を見る", customers_information_edit_path %>
    </div>
  </div>
    <div class="row">
    <div class="col-md-2">
      <strong>注文履歴</strong>
    </div>
    <div class="col-md-2">
      <%= link_to "一覧を見る", customers_information_edit_path %>
    </div>
  </div>
</div>
