<!--タイトル-->
<div class="container", style="min-height: 450px;">
  <div class="row mb-2 mt-4">
    <div class="col-3 offset-1 p-0">
      <h5 class="bg-gray text-center mb-4">配送先登録/一覧</h5>
    </div>
  </div>

<!--登録・一覧-->
  <%= form_with model: @address do |f| %>
  <div class="row mb-2 ml-3">
    <div class="col-10 ">
      <div class="row mb-2">
        <div class="col-3">
          <div class="small">郵便番号(ハイフンなし)</div>
        </div>
        <div class="col-3 p-0">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000", class: "rounded ml-3 w-100" %>
        </div>
      </div>
      <div class="row mb-2">
        <div class="col-3">
          <div class="small">住所</div>
        </div>
        <div class="col-7 py-0 pl-0">
          <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", class: "rounded ml-3 w-100" %>
        </div>
      </div>
      <div class="row mb-2">
        <div class="col-3">
          <div class="small">宛名</div>
        </div>
        <div class="col-3 p-0">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "令和道子", class: "rounded ml-3 w-100" %>
        </div>
        <div class="col-2 offset-4 p-0 justify-content-end">
          <%= f.submit '新規登録', class: "btn btn-success font-weight-bold text-center w-100 py-0" %>
        </div>
      </div>
    </div>
  </div>
  <% end %>

<!--一覧-->
  <div class="row mt-5 mb-5 ml-2">
    <table class="table col-8 mb-4">
      <tr class="bg-gray col-3 border border-dark">
        <th class="border border-dark px-1">郵便番号</th>
        <th class="border border-dark pl-1">住所</th>
        <th class="border border-dark pl-1">宛名</th>
        <th class="border border-dark"></th>
      </tr>
      <% @addresses.each do |address| %>
      <tr>
        <td class="border border-dark pl-1"><%= address.postal_code %></td>
        <td class="border border-dark px-1"><%= address.address %></td>
        <td class="col-2 border border-dark pl-1"><%= address.name %></td>
        <td class="col-4 border border-dark">
          <div class="row">
            <div class="col-md-6 pr-0">                <!-- justify-content-end-->
              <%= link_to '編集する', edit_address_path(address.id), class: "btn btn-success font-weight-bold px-2 py-1 mr-0" %>
            </div>
            <div class="col-md-6 px-0">
              <%= link_to '削除する', address_path(address.id), method: :delete, class: "btn btn-danger font-weight-bold px-2 py-1 ml-0" %>
            </div>
          </div>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

