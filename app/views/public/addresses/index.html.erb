<!--ヘッダー-->

<!--タイトル-->
<div class="container">
  <div class="row mb-2">
    <div class="col-md-3">
      <h5 class="bg-gray px-1 text-center">配送先登録/一覧</h5>
    </div>
  </div>

<!--登録-->
  <div class="row mb-2">
  <%= form_with model: @address do |f| %>
    <div class="col-3">
      <div>郵便番号(ハイフンなし)</div>
    </div>
    <div class="col-3 d-flex p-0">
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000", class: "rounded ml-2 d-inline-flex justify-content-end w-100" %>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-3">
      <div>住所</div>
    </div>
    <div class="col-7 d-flex p-0">
      <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", class: "rounded ml-2 d-inline-flex justify-content-end w-100" %>
    </div>
  </div>
  <div class="row mb-5">
    <div class="col-3">
      <div>宛名</div>
    </div>
    <div class="col-3 d-flex p-0">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "令和道子", class: "rounded ml-2 d-inline-flex justify-content-end w-100" %>
    </div>
    <div class="col-3 d-flex p-0">
      <%= f.submit '更新', class: "btn btn-success font-weight-bold d-inline-flex" %>
    </div>
  </div>

<!--一覧-->
  <div class="row mb-4">
    <table class="table">
        <tr class="bg-light">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
          <%= form_with model: order_detail, url: admin_order_detail_path(order_detail.id), method: :patch do |f| %>
            <div class="row">
              <div class="col-md-7 align-self-center">

              </div>
              <div class="col-md-5">

              </div>
            </div>
          <% end %>
          </td>
        </tr>
        <% end %>
      </table>
  </div>
</div>