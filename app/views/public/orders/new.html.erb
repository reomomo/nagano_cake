<!--タイトル-->
<div class="container">
  <div class="row mt-4 mb-2">
    <div class="col-md-3 offset-1">
      <h5 class="bg-gray px-1 text-center">注文情報入力</h5>
    </div>
  </div>

<!--注文情報入力-->
  <div class="row">
    <div class="col">
      <%= form_with model: @order, url: orders_confirm_path, method: :post, local: true do |f| %>
        <h5><strong>支払方法</strong></h5>
        <div class="ml-5">
          <%= f.radio_button :payment_methods, Order.payment_methods.key(0), checked: true %>
          <%= f.label :payment_methods, I18n.t(Order.payment_methods.key(0)) %><br />
          <%= f.radio_button :payment_methods, Order.payment_methods.key(1) %>
          <%= f.label :payment_methods, I18n.t(Order.payment_methods.key(1)) %><br />
        </div>
        <h5><strong>お届け先</strong></h5>
        <div class="ml-5">
          <%= f.radio_button :address_option, 0, checked: "checked" %>
          <%= f.label :delivery_address, "ご自身の住所", class:"mb-0" %><br />
          <div class="ml-4 mb-2">
            〒<%= current_customer.postal_code %> <%= current_customer.address %><br />
            <%= current_customer.last_name %><%= current_customer.first_name %><br />
          </div>
          <%= f.radio_button :address_option, 1 %>
          <%= f.label :delivery_address, "登録済み住所から選択" %><br />
          <div class="ml-2 mb-2">
            <%= select_tag "address_option", options_from_collection_for_select(current_customer.addresses,:id,:delivery,:customer_id), class: "form-control-sm w-75 h-25 ml-4 pl-0" %>
          </div>
          <%= f.radio_button :address_option, 2 %>
          <%= f.label :delivery_address, "新しいお届け先" %><br />
          <div class="row mb-2">
            <div class="col-3 small">
              <%= f.label :"郵便番号(ハイフンなし)", class: "ml-4" %>
            </div>
            <div class="col">
              <%= f.text_field :delivery_target_postal_code, placeholder: "0000000",class: "rounded" %><br />
            </div>
          </div>
          <div class="row mb-2">
            <div class="col-3 small">
              <%= f.label :"住所", class: "ml-4" %>
            </div>
            <div class="col">
              <%= f.text_field :delivery_address, placeholder: "東京都渋谷区代々木神園町0-0", class: "primary rounded w-75" %><br />
            </div>
          </div>
          <div class="row mb-2">
            <div class="col-3 small">
              <%= f.label :"宛名", class: "ml-4" %>
            </div>
            <div class="col">
              <%= f.text_field :delivery_target_full_name, placeholder: "令和道子", class: "rounded" %><br />
            </div>
          </div>
        </div>
        <div class="row mb-2">
          <div class="col offset-5">
            <%= f.submit "確認画面へ進む", class: "btn btn-primary font-weight-bold" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>